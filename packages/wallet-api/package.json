    "ecpair": "^2.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.16.4",
    "express-status-monitor": "^1.3.3",
    "http-status": "^1.5.0",
    "jest-mock": "^26.6.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "3.1.13",
    "mongoose": "^5.12.2",
    "morgan": "^1.10.0",
    "multicoin-address-validator": "^0.5.8",
