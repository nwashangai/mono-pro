    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.16.7",
    "@types/node": "~7.0.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.4.0",
