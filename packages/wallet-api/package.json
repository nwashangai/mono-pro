{
  "name": "@mono/wallet-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "typings": "dist/index",
  "scripts": {
    "build": "npm run clean && npx tsc",
    "now-build": "npm run build",
    "clean": "rimraf dist",
    "db": "ts-node ./db/index.ts",
    "dev": "ts-node-dev --respawn -- ./src/index.ts",
    "start": "npm run clean && npm run build && cd lib && node index.js",
    "test": "jest src --coverage",
    "tsc": "tsc",
    "eslint": "eslint src --max-warnings=0 --ext .ts",
    "eslint:fix": "npm run eslint -- --fix",
    "check": "npm run tsc && npm run eslint && npm run stylelint",
    "stylelint": "stylelint \"**/*.(ts|tsx)\"",
    "test:watch": "jest src --watch --coverage",
    "test:e2e": "jest ./__test__ --runInBand"
  },
  "author": "Young Nwadike",
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "src/config/environments/test.js",
      "src/*.js"
    ],
    "globalSetup": "./jest-setup.js",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/*.ts",
      "!src/db/*.ts",
      "!src/config/environments/*.ts"
    ],
    "globalTeardown": "./jest-teardown.js",
    "testEnvironment": "./jest-mongo.js",
    "collectCoverage": true
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.17.0",
